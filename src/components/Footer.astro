---
import { Image } from "astro:assets";
import { logo2 } from "../assets/images";
import { phone, mail } from "../assets/icons";
---

<footer class="bg-title-color min-w-full mt-20 py-12">
    <div class="max-container flex justify-between max-xl:flex-col max-xl:px-7">
        <a href="/ConserveEnergy">
            <Image src={logo2} alt="Logo2" width={203} height={26} />
        </a>

        <div class="flex justify-between flex-col gap-12 max-lg:gap-5">
            <p class="flex items-center justify-center gap-10 text-bone max-xl:flex-col max-xl:gap-3 max-xl:items-start max-xl:px-7 max-xl:py-7">
                 <a class="group transition-all duration-300 ease-in-out hover:-translate-y-1" href="/ConserveEnergy/services">
      <span class="bg-left-bottom bg-gradient-to-r from-caption-color to-caption-color bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out">
        Services
      </span>
    </a>
    <a class="group transition-all duration-300 ease-in-out hover:-translate-y-1" href="/ConserveEnergy/results">
      <span class="bg-left-bottom bg-gradient-to-r from-caption-color to-caption-color bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out">
        Results
      </span>
    </a>
    <a class="group transition-all duration-300 ease-in-out hover:-translate-y-1" href="/ConserveEnergy/about">
      <span class="bg-left-bottom bg-gradient-to-r from-caption-color to-caption-color bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out">
        About
      </span>
    </a>
    <a class="group transition-all duration-300 ease-in-out hover:-translate-y-1" href="/ConserveEnergy/contact">
      <span class="bg-left-bottom bg-gradient-to-r from-caption-color to-caption-color bg-[length:0%_2px] bg-no-repeat group-hover:bg-[length:100%_2px] transition-all duration-500 ease-out">
        Contact
      </span>
    </a>
            </p>
            <p class="text-gray text-center max-xl:hidden">©Copyright. All rights reserved.ConserveEnergy2023</p>
        </div>

        <div class="flex-col flex gap-4 max-lg:py-5 max-xl:flex-col-reverse">
            <p class="text-gray text-center xl:hidden max-xl:mt-5">©Copyright. All rights reserved.ConserveEnergy2023</p>

            <div class="flex gap-3">
                <Image src={phone} alt="phone-icon" width={24}
                height={24}/>
                <p class="text-white">(800)757-3469</p>
            </div>
            <div class="flex gap-3">
                <Image src={mail} alt="mail-icon" 
                width={24}
                height={24} />
                <p class="text-white">info@ezmetro.com</p>
            </div>
        </div>
    </div>
</footer>

